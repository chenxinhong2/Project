<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kila0.project">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainPage"
            android:launchMode="singleInstance"
            android:theme="@style/my_Notitlebar">

        </activity>

        <activity
            android:name=".Welcome"
            android:theme="@style/my_FullScreen"
            android:launchMode="singleInstance">

        </activity>

        <activity android:name=".user_details"
            android:theme="@style/my_transport">

        </activity>

        <activity android:name=".sent_task"
            android:theme="@style/my_transport">

        </activity>

        <activity android:name=".received_task"
            android:theme="@style/my_transport">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
    </application>

</manifest>