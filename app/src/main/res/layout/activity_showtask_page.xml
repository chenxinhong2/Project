<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg1">

    <TextView
        android:layout_marginTop="60dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="任务详情"
        android:textSize="50dp"
        android:gravity="center"
        android:textColor="@color/white"
        />
    <TableLayout
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/background1"
        >
        <TableRow
            android:layout_marginTop="30dp">
            <TextView
                android:layout_marginLeft="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="任务类型："
                style="@style/add_page_text"
                />
            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/showtask_page_TaskType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="嘿嘿嘿"
                style="@style/add_page_text"

                />
        </TableRow>
        <TableRow
            android:layout_marginTop="20dp">
            <TextView
                android:layout_marginLeft="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="任务时间："
                style="@style/add_page_text"

                />
            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/showtask_page_TaskTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12：00 - 13:00"
                style="@style/add_page_text"

                />
        </TableRow>
        <TableRow
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_marginLeft="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="任务详情："
                style="@style/add_page_text"

                />
            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/showtask_page_TaskDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天桥底拿快递\n哈哈哈哈哈\n哈哈哈哈哈"
                style="@style/add_page_text"

                />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <TableRow
            android:layout_marginTop="40dp"
            android:gravity="center">
            <Button
                android:id="@+id/showtask_page_Accepct"
                android:background="@drawable/background1"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="接单"
                android:textSize="20dp"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/showtask_page_Back"
                android:background="@drawable/background1"
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:textSize="20dp"
                android:textColor="@color/white"/>
        </TableRow>
    </TableLayout>

</LinearLayout>