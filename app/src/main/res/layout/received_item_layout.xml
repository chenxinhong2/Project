<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/received_item_time"
        android:text="12月12日"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="22dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/received_item_time"
        android:id="@+id/received_item_type"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:text="快递"
        android:textSize="22dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/received_item_type"
        android:text="啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊"
        android:id="@+id/received_item_details"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/received_item_money"
        android:layout_below="@id/received_item_details"
        android:textSize="18dp"
        android:text="收入：0元"/>
    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/received_item_details"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/icon"/>

</RelativeLayout>