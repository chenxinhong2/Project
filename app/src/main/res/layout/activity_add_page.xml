<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green2"
    >

    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发布任务"
        android:textSize="50dp"
        android:gravity="center"
        />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp">

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="任务类型:"
                android:textColor="#000000"
                style="@style/add_page_text"/>
            <RadioGroup
                android:id="@+id/add_page_RadioGroup"
                >
                <RadioButton
                    android:layout_marginLeft="10dp"
                    android:id="@+id/add_page_Button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取快递"
                    style="@style/add_page_text"
                    android:textColor="#000000"/>
                <RadioButton
                    android:layout_marginLeft="10dp"
                    android:id="@+id/add_page_Button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拿外卖"
                    style="@style/add_page_text"
                    android:textColor="#000000"/>
                <RadioButton
                    android:layout_marginLeft="10dp"
                    android:id="@+id/add_page_Button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="代签到"
                    style="@style/add_page_text"
                    android:textColor="#000000"/>
                <RadioButton
                    android:layout_marginLeft="10dp"
                    android:id="@+id/add_page_Button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="嘿嘿嘿"
                    style="@style/add_page_text"
                    android:textColor="#000000"/>
            </RadioGroup>
        </TableRow>

        <TableRow
            android:layout_marginTop="30dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="任务时间："
                android:textColor="#000000"
                style="@style/add_page_text"
                />
            <TextView
                android:id="@+id/add_page_StartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/add_page_text"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:text="12:00"
                />
            <TextView
                style="@style/add_page_text"
                android:textColor="#000000"
                android:text=" - "
                />
            <TextView
                android:id="@+id/add_page_EndTime"
                android:layout_marginLeft="20dp"
                style="@style/add_page_text"
                android:textColor="#000000"
                android:text="13:00"
                />
        </TableRow>

        <TableRow
            android:layout_marginTop="0dp"
            >
            <TextView
                style="@style/add_page_text"
                android:textColor="#000000"
                android:textSize="16dp"
                android:text="(点击可选)"
                />
        </TableRow>


        <TableRow
            android:layout_marginTop="30dp">
            <TextView
                android:paddingTop="10dp"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="任务详情:"
                android:textColor="#000000"
                style="@style/add_page_text"/>
            <EditText
                android:id="@+id/add_page_TaskDetails"
                android:layout_span="3"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableRow>

    </TableLayout>


    <TableLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:gravity="center"
            >
            <Button
                android:id="@+id/add_page_Submit"
                android:layout_margin="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn"
                style="@style/add_page_text"
                android:text="发布"
                />
            <Button
                android:id="@+id/add_page_Clear"
                android:layout_margin="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn"
                style="@style/add_page_text"
                android:text="清空"
                />
        </TableRow>
    </TableLayout>

</LinearLayout>